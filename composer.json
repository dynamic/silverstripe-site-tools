{
    "name": "dynamic/silverstripe-site-tools",
    "description": "Tools to build common functionality in SilverStripe sites.",
    "license": "BSD-3-Clause",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS"
    ],
    "authors": [
        {
            "name": "Dynamic",
            "email": "dev@dynamicagency.com",
            "homepage": "https://www.dynamicagency.com"
        }
    ],
    "require": {
        "dynamic/silverstripe-linkable": "^1.0",
        "silvershop/silverstripe-hasonefield": "^2.1 || ^3.0",
        "silverstripe/recipe-cms": "^4.0",
        "silverstripe/vendor-plugin": "^1.0",
        "symbiote/silverstripe-gridfieldextensions": "^3.0",
        "unclecheese/display-logic": "^2.0"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dynamic\\SiteTools\\": "src/",
            "Dynamic\\SiteTools\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        },
        "process-timeout": 600
    }
}
