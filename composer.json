{
    "name": "dynamic/silverstripe-site-tools",
    "description": "Tools to build common functionality in SilverStripe sites.",
    "license": "BSD-3-Clause",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS"
    ],
    "authors": [
        {
            "name": "Dynamic",
            "email": "dev@dynamicagency.com",
            "homepage": "https://www.dynamicagency.com"
        }
    ],
    "require": {
        "php": "^8.3 || ^8.4",
        "silvershop/silverstripe-hasonefield": "^5.0",
        "silverstripe/linkfield": "^5.0",
        "silverstripe/recipe-cms": "^6",
        "symbiote/silverstripe-gridfieldextensions": "^5",
        "unclecheese/display-logic": "^4.0"
    },
    "require-dev": {
        "dnadesign/silverstripe-elemental": "^6",
        "silverstripe/recipe-testing": "^4.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dynamic\\SiteTools\\": "src/",
            "Dynamic\\SiteTools\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        },
        "process-timeout": 600
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.x-dev",
            "dev-5.0/ss6-upgrade": "5.0.x-dev"
        }
    }
}
